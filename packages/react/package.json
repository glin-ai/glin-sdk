{
  "name": "@glin-ai/sdk-react",
  "version": "0.1.0",
  "description": "React hooks and components for GLIN SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react --external react-dom",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "glin",
    "react",
    "hooks",
    "blockchain",
    "web3",
    "wallet",
    "substrate"
  ],
  "author": "GLIN AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/glin-ai/glin-sdk.git",
    "directory": "packages/react"
  },
  "peerDependencies": {
    "@glin-ai/sdk": "workspace:*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.54.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
